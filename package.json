{
  "name": "quant-trading-system",
  "version": "1.0.0",
  "description": "工业级加密货币量化交易系统 - Industrial-grade Cryptocurrency Quantitative Trading System",
  "main": "src/index.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "start": "node src/main.js live",
    "dev": "node --watch src/main.js shadow --verbose",
    "backtest": "node src/main.js backtest",
    "shadow": "node src/main.js shadow",
    "live": "node src/main.js live",
    "download-data": "node scripts/downloadHistoricalData.js",
    "download-history": "node scripts/download-history.js",
    "keys:encrypt": "node scripts/keyManager.js encrypt",
    "keys:decrypt": "node scripts/keyManager.js decrypt",
    "keys:verify": "node scripts/keyManager.js verify",
    "keys:generate": "node scripts/keyManager.js generate",
    "keys:rotate": "node scripts/keyManager.js rotate",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:shadow": "pm2 start ecosystem.config.cjs --only quant-shadow-funding,quant-shadow-grid,quant-shadow-sma,quant-shadow-rsi,quant-shadow-macd,quant-shadow-bb,quant-shadow-atr,quant-shadow-bbwidth,quant-shadow-regime,quant-shadow-orderflow,quant-shadow-mtf,quant-shadow-combo,quant-shadow-crosssectional,quant-shadow-momentumrank,quant-shadow-rotation,quant-shadow-fundingextreme,quant-shadow-crossexchange,quant-shadow-statarb,quant-shadow-riskdriven",
    "pm2:live": "pm2 start ecosystem.config.cjs --only quant-live-funding,quant-live-grid,quant-live-sma,quant-live-rsi,quant-live-macd,quant-live-bb,quant-live-atr,quant-live-bbwidth,quant-live-regime,quant-live-orderflow,quant-live-mtf,quant-live-combo,quant-live-crosssectional,quant-live-momentumrank,quant-live-rotation,quant-live-fundingextreme,quant-live-crossexchange,quant-live-statarb,quant-live-riskdriven",
    "pm2:stop": "pm2 stop ecosystem.config.cjs",
    "pm2:restart": "pm2 restart ecosystem.config.cjs",
    "pm2:reload": "pm2 reload ecosystem.config.cjs",
    "pm2:logs": "pm2 logs",
    "pm2:status": "pm2 status",
    "lint": "eslint src/ tests/ scripts/",
    "lint:fix": "eslint src/ tests/ scripts/ --fix",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit/",
    "test:integration": "vitest run tests/integration/",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:old": "node --test tests/unit/*.test.js tests/integration/*.test.js",
    "bench": "node --test tests/benchmark/*.bench.js",
    "bench:order": "node --test tests/benchmark/orderLatency.bench.js",
    "bench:executor": "node --test tests/benchmark/executor.bench.js",
    "ci": "pnpm lint && pnpm test",
    "ci:full": "pnpm lint && pnpm test && pnpm bench",
    "precommit": "pnpm lint && pnpm test:unit"
  },
  "dependencies": {
    "@clickhouse/client": "^1.0.1",
    "axios": "^1.6.2",
    "ccxt": "^4.2.0",
    "commander": "^14.0.2",
    "decimal.js": "^10.4.3",
    "dotenv": "^16.3.1",
    "eventemitter3": "^5.0.1",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "lodash-es": "^4.17.21",
    "node-cron": "^3.0.3",
    "node-telegram-bot-api": "^0.67.0",
    "nodemailer": "^6.9.7",
    "p-queue": "^8.0.1",
    "p-retry": "^6.2.0",
    "pino": "^10.1.0",
    "prom-client": "^15.1.0",
    "socket.io": "^4.7.2",
    "sql.js": "^1.13.0",
    "technicalindicators": "^3.1.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.16.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^8.56.0",
    "vitest": "^4.0.16"
  },
  "keywords": [
    "cryptocurrency",
    "trading",
    "quantitative",
    "bitcoin",
    "ethereum",
    "backtesting",
    "algorithmic-trading"
  ],
  "author": "",
  "license": "MIT"
}
