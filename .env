# --------------------------------------------
# 运行模式 / Running Mode
# --------------------------------------------
# production: 生产环境，真实交易
# development: 开发环境，测试功能
# paper: 模拟交易，不执行真实订单
NODE_ENV=paper

# --------------------------------------------
# 交易所API配置 / Exchange API Configuration
# --------------------------------------------
# Binance 交易所配置
BINANCE_API_KEY=mhBLpIbBB1vX2aL7TD9qyqfiTibVuvGUbRzpBSCKWabAh1ys4h4cm5sPaxghrLRo
BINANCE_API_SECRET=fJcB0mGWgC7CwQfiDpQAKd9LKM6uFijYY9h6MfJiyg7TAystC4klCjHaU0iprnJS
# 是否使用测试网 (true/false)
# 注意: CCXT 4.x 已废弃合约测试网，Shadow模式使用主网行情+dryRun
BINANCE_TESTNET=false

# OKX 交易所配置
# OKX_API_KEY=your_okx_api_key_here
# OKX_API_SECRET=your_okx_api_secret_here
# OKX_PASSPHRASE=your_okx_passphrase_here
# 是否使用模拟盘 (true/false)
# OKX_SANDBOX=true

# Bybit 交易所配置
# BYBIT_API_KEY=your_bybit_api_key_here
# BYBIT_API_SECRET=your_bybit_api_secret_here
# 是否使用测试网 (true/false)
# BYBIT_TESTNET=true

# --------------------------------------------
# 数据库配置 / Database Configuration
# --------------------------------------------
# SQLite 数据库文件路径 (用于存储本地数据)
SQLITE_DB_PATH=./data/trading.db

# Redis 配置 (用于缓存和实时数据)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# --------------------------------------------
# 风控配置 / Risk Management Configuration
# --------------------------------------------
# 单笔最大亏损百分比 (0.02 = 2%)
MAX_LOSS_PER_TRADE=0.02
# 单日最大亏损百分比 (0.05 = 5%)
MAX_DAILY_LOSS=0.05
# 最大持仓数量
MAX_POSITIONS=10
# 单个交易对最大仓位占比 (0.2 = 20%)
MAX_POSITION_SIZE=0.2
# 账户最大杠杆倍数
MAX_LEVERAGE=3

# --------------------------------------------
# 监控告警配置 / Monitoring & Alerting Configuration
# --------------------------------------------
# 邮件通知配置
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_smtp_password_here
ALERT_EMAIL_TO=alert@example.com

# Telegram 机器人配置
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# 钉钉机器人配置
# DINGTALK_WEBHOOK=https://oapi.dingtalk.com/robot/send?access_token=xxx
# DINGTALK_SECRET=your_dingtalk_secret

# --------------------------------------------
# 日志配置 / Logging Configuration
# --------------------------------------------
# 日志级别: error, warn, info, debug
LOG_LEVEL=info
# 日志文件保留天数
LOG_RETENTION_DAYS=30
# 日志文件路径
LOG_PATH=./logs

# --------------------------------------------
# Web 监控面板配置 / Web Dashboard Configuration
# --------------------------------------------
# 监控面板端口
DASHBOARD_PORT=3000
# 监控面板密码 (用于简单认证)
DASHBOARD_PASSWORD=your_secure_password_here

# --------------------------------------------
# 策略配置 / Strategy Configuration
# --------------------------------------------
# 默认交易对列表 (逗号分隔)
DEFAULT_SYMBOLS=BTC/USDT,ETH/USDT,BNB/USDT
# 默认时间周期
DEFAULT_TIMEFRAME=1h
# 策略执行间隔 (毫秒)
STRATEGY_INTERVAL=60000

# --------------------------------------------
# 回测配置 / Backtesting Configuration
# --------------------------------------------
# 回测数据存储路径
BACKTEST_DATA_PATH=./data/historical
# 默认回测起始日期
BACKTEST_START_DATE=2023-01-01
# 默认回测结束日期
BACKTEST_END_DATE=2024-01-01
# 回测初始资金
BACKTEST_INITIAL_CAPITAL=10000

# --------------------------------------------
# ClickHouse 配置 / ClickHouse Configuration
# --------------------------------------------
# ClickHouse 主机地址
CLICKHOUSE_HOST=localhost
# ClickHouse 端口
CLICKHOUSE_PORT=8123
# ClickHouse 数据库名
CLICKHOUSE_DATABASE=default
# ClickHouse 用户名
CLICKHOUSE_USERNAME=default
# ClickHouse 密码
CLICKHOUSE_PASSWORD=
